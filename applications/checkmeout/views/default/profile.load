<h1>{{=T('Your photos')}}</h1>

<ul class="thumbnails">
  {{for pic in photos:}}
  <div class="pic">
    <li class="span1">
      {{=A(IMG(_src=URL('download',args=pic.thumbnail),_alt=pic.title), _class="thumbnail", _href=URL('default','profile', args=pic.id), cid=request.cid)}}
      <span class="title">{{=pic.title}}</span>
    </li>
  </div>
  {{pass}}
</ul>

<h2>{{=T('Add more')}}</h2>
{{=form}}

